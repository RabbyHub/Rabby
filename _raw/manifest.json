{
  "manifest_version": 3,
  "name": "Ducky Wallet",
  "short_name": "Ducky Wallet",
  "version": "0.0.1",
  "default_locale": "en",
  "description": "",
  "icons": {
    "16": "images/icon-16.png",
    "19": "images/icon-19.png",
    "32": "images/icon-32.png",
    "38": "images/icon-38.png",
    "48": "images/icon-48.png",
    "64": "images/icon-64.png",
    "128": "images/icon-128.png",
    "512": "images/icon-512.png"
  },
  "action": {
    "default_icon": {
      "16": "images/icon-16.png",
      "19": "images/icon-19.png",
      "32": "images/icon-32.png",
      "48": "images/icon-48.png",
      "128": "images/icon-128.png"
    },
    "default_title": "Ducky Wallet",
    "default_popup": "popup.html"
  },
  "author": "https://www.duckyscan.com/",
  "background": {
    "service_worker": "service_worker.js"
  },
  "content_scripts": [
    {
      "all_frames": true,
      "js": ["webextension-polyfill.js", "content-script.js"],
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "run_at": "document_start"
    },
    {
      "matches": ["*://connect.trezor.io/*/popup.html"],
      "js": ["vendor/trezor/trezor-content-script.js"]
    }
  ],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "permissions": ["storage", "unlimitedStorage", "activeTab", "notifications"],
  "host_permissions": ["https://wallet.gridplus.io/*"],
  "web_accessible_resources": [
    { "resources": ["user-media-permission.html"], "matches": ["<all_urls>"] }
  ]
}
