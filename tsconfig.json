{
  "compilerOptions": {
    "baseUrl": "./",
    "module": "commonjs",
    "target": "es3",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "strict": true,
    "esModuleInterop": true,
    "paths": {
      "utils": ["./src/utils"],
      "@/*": ["./src/*"],
      "ui/*": ["./src/ui/*"],
      "background/*": ["./src/background/*"],
      "consts": ["./src/consts"]
    },
    "types": ["chrome", "node", "react", "react-dom"],
    "jsx": "react",
    "allowSyntheticDefaultImports": true,
    "allowJs": true,
    "plugins": [{ "transform": "typescript-transform-paths", "afterDeclarations": true }]
  },
  "exclude": ["_raw"],
  "include": ["src", "ethereum-cryptography"]
}
