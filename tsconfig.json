{
  "compilerOptions": {
    "baseUrl": ".",
    "module": "ES2015",
    "target": "ES5",
    "lib": ["ES2015", "DOM"],
    "noImplicitAny": false,
    "strict": true,
    "declaration": true,
    "paths": {
      "utils": ["src/utils"],
      "@/*": ["src/*"],
      "ui/*": ["src/ui/*"]
    },
    "types": ["chrome"],
    "jsx": "react",
    "moduleResolution": "Node"
  },
  "include": ["./src/**/*"],
  "exclude": ["node_modules"],
}
